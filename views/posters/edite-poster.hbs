<script src="https://cdn.ckeditor.com/4.17.2/standard/ckeditor.js"></script>
<div class="container mtt">
    <div class="row">
        <div class="col-lg-12">
            <div class="card p-4 mb-5">
                {{#if editePoster}}
                <form action="/posters/{{editePoster._id}}/edite" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">E'lon sarlavhasi</label>
                        <input 
                        type="text" 
                        class="form-control" 
                        placeholder="Noutbuk Acer" 
                        id="title" 
                        name="title"
                        value="{{editePoster.title}}"
                        />

                    </div>
                    <div class="mb-3">
                        <label for="amount" class="form-label">Narxi (so'mda)</label>
                        <input 
                        type="number" 
                        class="form-control" 
                        placeholder="500 000" 
                        id="amount" 
                        name="amount"
                        value="{{editePoster.amount}}"
                        />
                    </div>
                    <div class="mb-3">
                        <label for="region" class="form-label">Hudud</label>
                        <select 
                        class="form-select" 
                        id="region"
                        name="region" 
                        aria-label="Default select example"
                        >
                            <option >Hududni tanlang</option>
                            <option value="Toshkent">Toshkent</option>
                            <option value="Qarshi">Qarshi</option>
                            <option value="Buxoro">Buxoro</option>
                            <option value="Navoiy">Navoiy</option>
                            <option value="Andijon">Andijon</option>
                            <option value="Namangan">Namangan</option>
                            <option value="Farg'ona">Farg'ona</option>
                            <option value="Guliston">Guliston</option>
                            <option value="Termiz">Termiz</option>
                            <option value="Samarqand">Samarqand</option>
                            <option value="Xorazm">Xorazm</option>
                            <option value="Nukus">Nukus</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Rasm tanlang</label>
                        <input 
                        class="form-control" 
                        type="file"
                        id="image" 
                        name="image"
                        />
                    </div>
                    <div class="mb-3">
                        <label for="desc" class="form-label">Tarif</label>
                        <textarea name="desc">{{editePoster.desc}}</textarea>
                        <script>
                                CKEDITOR.replace( 'desc' );
                        </script>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">tahrirlash</button>
                    </div>
                </form>
                {{/if}}
            </div>
        </div>
    </div>
</div>
