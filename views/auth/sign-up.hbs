<div class="container mtt">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card p-4 mb-5">
            <form action="/auth/signup" method="POST">
                <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" placeholder="example@mail.com" name="email" id="email">
                </div>
                <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" placeholder="Eshmatov Toshmat" name="username" id="username">
                </div>
                <div class="mb-3">
                <label for="phone" class="form-label">Phone number</label>
                <input type="number" class="form-control" placeholder="998911234567" name="phone" id="phone">
                </div>
                <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" name="password" id="password">
                </div>
                <div class="mb-3">
                <label for="password2" class="form-label">Password repeat</label>
                <input type="password" class="form-control" name="password2" id="password2">
                </div>
                <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Registratsiya</button>
                </div>
            </form>
            </div>
        </div>
    </div>
</div>